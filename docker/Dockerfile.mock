# Mock Server Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY tools/mock-server/package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source
COPY tools/mock-server/tsconfig.json ./
COPY tools/mock-server/src ./src

# Build TypeScript
RUN npm run build

# Set environment
ENV NODE_ENV=production
ENV PORT=8081

# Expose port
EXPOSE 8081

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8081/health || exit 1

# Start server
CMD ["node", "dist/index.js"]
