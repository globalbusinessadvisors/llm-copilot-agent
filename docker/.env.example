# LLM CoPilot Agent - Docker Environment Configuration
# Copy this file to .env and customize as needed

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=copilot
POSTGRES_PASSWORD=copilot
POSTGRES_DB=copilot
POSTGRES_PORT=5432

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PORT=6379

# ===========================================
# API Server Configuration
# ===========================================
NODE_ENV=development
API_PORT=8080
LOG_LEVEL=debug
LOG_FORMAT=pretty

# JWT Secret - CHANGE IN PRODUCTION (minimum 32 characters)
JWT_SECRET=dev-secret-change-in-production-min-32-chars

# Encryption Key - CHANGE IN PRODUCTION
ENCRYPTION_KEY=dev-encryption-key-change-in-prod

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# LLM Provider API Keys
# ===========================================
# Uncomment and set the API keys for the providers you want to use

# Anthropic (Claude)
# ANTHROPIC_API_KEY=sk-ant-xxx

# OpenAI (GPT)
# OPENAI_API_KEY=sk-xxx

# Google (Gemini)
# GOOGLE_API_KEY=xxx

# ===========================================
# Mock Server Configuration
# ===========================================
MOCK_PORT=8081
MOCK_DELAY_MS=100

# ===========================================
# Monitoring Configuration
# ===========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ===========================================
# Development Tools (dev override)
# ===========================================
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@copilot.local
PGADMIN_PASSWORD=admin
REDIS_COMMANDER_PORT=8082
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
